<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.terminal.TerminalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">

        <EditText
            android:id="@+id/input_command"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="command (e.g. hello)"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/button_toggle_stdin"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="stdin"
            android:padding="8dp"
            android:src="@drawable/ic_dashboard_black_24dp"
            android:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/button_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="refresh"
            android:padding="8dp"
            android:src="@drawable/ic_refresh_24"
            android:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/button_run"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="run"
            android:padding="8dp"
            android:src="@drawable/ic_send"
            android:tint="?attr/colorOnSurface" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_stdin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stdin (optional)"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/input_stdin"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="top|start"
            android:hint="stdin"
            android:inputType="textMultiLine"
            android:padding="8dp"
            android:textSize="12sp" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        android:textColor="#B00020"
        android:visibility="gone"
        tools:text="Error message" />

    <TextView
        android:id="@+id/text_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingBottom="6dp"
        android:text="No runs yet." />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_runs"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        tools:listitem="@layout/item_terminal_run" />
</LinearLayout>


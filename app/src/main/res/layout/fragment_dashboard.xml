<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.dashboard.DashboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp">

        <ImageButton
            android:id="@+id/button_up"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="上级（长按回到根目录）"
            android:src="@drawable/ic_arrow_up_24"
            android:tint="?attr/colorOnSurface" />

        <TextView
            android:id="@+id/text_cwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceBody1"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/button_new_file"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="新建文件"
            android:src="@drawable/ic_note_add_24"
            android:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/button_new_folder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="新建目录"
            android:src="@drawable/ic_create_new_folder_24"
            android:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/button_import"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="导入文件到 inbox"
            android:src="@drawable/ic_insert_drive_file_24"
            android:tint="?attr/colorOnSurface" />

        <ImageButton
            android:id="@+id/button_paste"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="粘贴（移动到当前目录）"
            android:src="@drawable/ic_content_paste_24"
            android:tint="?attr/colorOnSurface"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_clear_sessions"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="清理 sessions"
            android:src="@drawable/ic_delete_24"
            android:tint="?attr/colorOnSurface"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_music_help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="后台播放排障"
            android:src="@drawable/ic_help_24"
            android:tint="?attr/colorOnSurface"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/button_refresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="刷新"
            android:src="@drawable/ic_refresh_24"
            android:tint="?attr/colorOnSurface" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        android:textColor="#B00020"
        android:visibility="gone"
        tools:text="Error message" />

    <TextView
        android:id="@+id/text_music_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        android:textAppearance="?attr/textAppearanceBody2"
        android:visibility="gone"
        tools:text="仅 musics/ 启用 mp3 播放与 metadata；后台不断播可点右上角“排障”。" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_entries"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="12dp"
        tools:listitem="@layout/item_agents_entry" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/music_mini_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:visibility="gone"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="12dp">

            <ImageView
                android:id="@+id/image_music_cover"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="封面"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_insert_drive_file_24" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_music_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceBody1"
                    tools:text="Title" />

                <TextView
                    android:id="@+id/text_music_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textAppearance="?attr/textAppearanceBody2"
                    tools:text="Artist · 0:12 / 3:45" />

                <ProgressBar
                    android:id="@+id/progress_music"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="6dp"
                    android:layout_marginTop="6dp"
                    android:max="1000"
                    android:progress="0" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/button_music_prev"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="上一首"
                android:src="@drawable/ic_arrow_back_24"
                android:tint="?attr/colorOnSurface" />

            <ImageButton
                android:id="@+id/button_music_play_pause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="播放/暂停"
                android:src="@drawable/ic_play_arrow_24"
                android:tint="?attr/colorOnSurface" />

            <ImageButton
                android:id="@+id/button_music_next"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="下一首"
                android:src="@drawable/ic_arrow_forward_24"
                android:tint="?attr/colorOnSurface" />

            <ImageButton
                android:id="@+id/button_music_stop"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="停止"
                android:src="@drawable/ic_stop"
                android:tint="?attr/colorOnSurface" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>

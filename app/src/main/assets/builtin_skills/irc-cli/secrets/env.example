# IRC basic config (DO NOT commit real secrets)
IRC_SERVER=
IRC_PORT=
IRC_TLS=0

# Default channel (v28 guarantees 1 default)
IRC_CHANNEL=

# Nick constraint: <= 9 chars (longer will be rejected)
IRC_NICK=

# Optional secrets (leave blank if unused)
IRC_SERVER_PASSWORD=
IRC_CHANNEL_KEY=
IRC_NICKSERV_PASSWORD=

# Optional: auto-forward inbound messages to agent (default off)
IRC_AUTO_FORWARD_TO_AGENT=0
